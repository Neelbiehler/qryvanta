{
  "name": "@qryvanta/ui",
  "version": "0.3.0",
  "description": "Shared React UI primitives for Qryvanta, based on shadcn/ui patterns.",
  "private": false,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./accordion": {
      "types": "./dist/accordion.d.ts",
      "import": "./dist/accordion.js"
    },
    "./dialog": {
      "types": "./dist/dialog.d.ts",
      "import": "./dist/dialog.js"
    },
    "./property-panel": {
      "types": "./dist/property-panel.d.ts",
      "import": "./dist/property-panel.js"
    },
    "./toast": {
      "types": "./dist/toast.d.ts",
      "import": "./dist/toast.js"
    },
    "./split-pane": {
      "types": "./dist/split-pane.d.ts",
      "import": "./dist/split-pane.js"
    },
    "./tree-view": {
      "types": "./dist/tree-view.d.ts",
      "import": "./dist/tree-view.js"
    },
    "./data-grid": {
      "types": "./dist/data-grid.d.ts",
      "import": "./dist/data-grid.js"
    },
    "./tabs": {
      "types": "./dist/tabs.d.ts",
      "import": "./dist/tabs.js"
    },
    "./tooltip": {
      "types": "./dist/tooltip.d.ts",
      "import": "./dist/tooltip.js"
    },
    "./dropdown-menu": {
      "types": "./dist/dropdown-menu.d.ts",
      "import": "./dist/dropdown-menu.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/accordion.ts src/tabs.ts src/tooltip.ts src/property-panel.ts src/dropdown-menu.ts src/dialog.ts src/toast.ts src/split-pane.ts src/tree-view.ts src/data-grid.ts --format esm --dts --clean --tsconfig tsconfig.build.json",
    "check": "tsc --noEmit",
    "prepublishOnly": "pnpm check && pnpm build"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Neelbiehler/qryvanta"
  },
  "homepage": "https://github.com/Neelbiehler/qryvanta/tree/main/packages/ui",
  "bugs": {
    "url": "https://github.com/Neelbiehler/qryvanta/issues"
  },
  "keywords": [
    "qryvanta",
    "react",
    "ui",
    "components",
    "shadcn"
  ],
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.5.0"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "typescript": "5.9.3"
  }
}
